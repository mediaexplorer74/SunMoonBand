<Application
    x:Class="SunMoonBand.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Application.Resources>
        <ResourceDictionary>

            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Dark">
                    <Color x:Key="ThemeColor">#8000FF</Color>
                    <SolidColorBrush x:Key="ThemeBrush" Color="{ThemeResource ThemeColor}" />
                </ResourceDictionary>
                <ResourceDictionary x:Key="Light">
                    <Color x:Key="ThemeColor">#8000FF</Color>
                    <SolidColorBrush x:Key="ThemeBrush" Color="{StaticResource ThemeColor}" />
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>

            <Style x:Key="BandListContainerStyle" TargetType="ListBoxItem">
                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            </Style>

        </ResourceDictionary>
    </Application.Resources>

</Application>